            {
                Console.WriteLine("Greshka");
            }

            else if (chois == 2)
            {
                Console.WriteLine("Pravilno");
            }

            int chois == 0;

            Console.WriteLine("Izberi:");

            Console.WriteLine("1. Mercedes");

